  <title>Upload File Tutorial</title>
  <script type="text/javascript" src="http://code.jquery.com/jquery-2.0.0.js"></script>
  <script type="text/javascript">
    $(document).ready(
      function () {
        $('input:submit').attr('disabled', true);
        $('input:file').change(
          function () {
            if ($(this).val()) {
              $('input:submit').removeAttr('disabled');
            }
            else {
              $('input:submit').attr('disabled', true);
            }
          });
      });

